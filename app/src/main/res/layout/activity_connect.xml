<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.example.laxmirefinary.ConnectActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:clickable="false"
        android:src="@drawable/logoapp"
        android:contentDescription="@string/todo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/laxmi_refinary"
        android:clickable="false"
        android:fontFamily="@font/cardo"
        android:textColor="@color/new2"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="110dp"
        android:textSize="28sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:text="@string/since_1999"
        android:clickable="false"
        android:textColor="@color/new2"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:textSize="20sp"/>
    <ImageButton
        android:id="@+id/addr"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/black"
        android:onClick="openMap"
        android:src="@drawable/address"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        tools:ignore="OnClick"
        android:contentDescription="@string/todo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/solapur_413001"
        android:fontFamily="@font/cardo"
        android:clickable="false"
        android:textColor="@color/new2"
        android:layout_marginTop="140dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:textSize="20sp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:layout_marginTop="70dp"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/phone"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/white"
            android:onClick="calling"
            android:src="@drawable/phone"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            tools:ignore="OnClick"
            android:contentDescription="@string/todo" />
        <ImageButton
            android:id="@+id/gmail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/white"
            android:onClick="openMail"
            android:src="@drawable/gmail"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            tools:ignore="OnClick"
            android:contentDescription="@string/todo"/>

        <ImageButton
            android:id="@+id/whatsapp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:onClick="openWhatsapp"
            android:background="@color/white"
            android:scaleType="centerInside"
            android:src="@drawable/whatsapp"
            tools:ignore="OnClick"
            android:contentDescription="@string/todo" />
        <ImageButton
            android:id="@+id/twitter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:onClick="openTwitter"
            android:background="@color/white"
            android:scaleType="centerInside"
            android:src="@drawable/twitter"
            tools:ignore="OnClick"
            android:contentDescription="@string/todo" />
        <ImageButton
            android:id="@+id/facebook"
            android:background="@color/white"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/twitter"
            android:onClick="openFacebook"
            android:src="@drawable/facebook"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            tools:ignore="OnClick"
            android:contentDescription="@string/todo"/>
        <ImageButton
            android:id="@+id/instagram"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/white"
            android:src="@drawable/instagram"
            android:onClick="openInstagram"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            tools:ignore="OnClick"
            android:contentDescription="@string/todo" />
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu" />
</RelativeLayout>