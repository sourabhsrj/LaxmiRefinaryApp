    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:clickable="false"
        android:src="@drawable/logoapp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Laxmi Refinary"
        android:clickable="false"
        android:textColor="@color/new2"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="110dp"
        android:textSize="28sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:text="Since-1999"
        android:clickable="false"
        android:textColor="@color/new2"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:textSize="20sp"/>
    <ImageButton
        android:id="@+id/addr"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/black"
        android:onClick="openMap"
        android:src="@drawable/address"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solapur-413001"
        android:clickable="false"
        android:textColor="@color/new2"
        android:layout_marginTop="140dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:textSize="20sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:layout_marginTop="70dp"
        android:layout_gravity="center">
    <ImageButton
        android:id="@+id/phone"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:background="@color/white"
        android:onClick="calling"
        android:src="@drawable/phone"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"/>
    <ImageButton
        android:id="@+id/gmail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/white"
        android:layout_marginTop="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:onClick="openMail"
        android:src="@drawable/gmail"
        android:adjustViewBounds="true"
        android:layout_toRightOf="@+id/phone"
        android:scaleType="centerInside"/>

        <ImageButton
            android:id="@+id/whatsapp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:adjustViewBounds="true"
            android:layout_toRightOf="@id/gmail"
            android:onClick="openWhatsapp"
            android:background="@color/white"
            android:scaleType="centerInside"
            android:src="@drawable/whatsapp" />

        <ImageButton
            android:id="@+id/twitter"
            android:layout_marginLeft="60dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="100dp"
            android:adjustViewBounds="true"
            android:onClick="openTwitter"
            android:background="@color/white"
            android:scaleType="centerInside"
            android:src="@drawable/twitter" />
    <ImageButton
        android:id="@+id/facebook"
        android:background="@color/white"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/twitter"
        android:onClick="openFacebook"
        android:src="@drawable/facebook"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"/>
    <ImageButton
        android:id="@+id/instagram"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/white"
        android:src="@drawable/instagram"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@id/facebook"
        android:onClick="openInstagram"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"/>
    </RelativeLayout>
    <!--<ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:src="@drawable/ic_bottom_vector" />-->
</FrameLayout>